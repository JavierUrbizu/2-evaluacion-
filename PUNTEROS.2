#include<iostream>
#include<stdio.h>

using namespace std;

int main (){
	char letra;
	char *pletra;
	letra='A';
	pletra=&letra;//& es para indicar la direccion
	printf("letra = %c\n",letra);//%d es entero, %f es decimal
	printf("pletra = %x",pletra);//\n es cambio de linea en este lenguaje
	return 0;
}
